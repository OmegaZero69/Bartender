<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15sp"
    app:layout_collapseMode="pin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drink_name_expandable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:padding="1dp"
        android:paddingBottom="15dp"
        android:weightSum="1"
        android:animateLayoutChanges="true"
        tools:context=".search">

        <TextView
            android:id="@+id/drink_name_tv"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:text="Search by: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/drink_name_edit_text"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:hint="Drink Name"
            android:paddingTop="1dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/expandable_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="11dp"
        android:layout_weight="3"
        tools:context=".search">

        <TextView
            android:id="@+id/drink_or_search_by_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_gravity="end"
            android:padding="0sp"
            android:text=" ▲ "
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/drink_down_arrow_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="0sp"
            android:text="  Or Search By: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/drink_up_arrow_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_gravity="end"
            android:padding="0sp"
            android:text=" ▼ "
            android:textAppearance="?android:attr/textAppearanceLarge"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/expandable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="1dp"
            android:paddingBottom="15dp"
            android:weightSum="1"
            tools:context=".search">

            <TextView
                android:id="@+id/drink_content_tv"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:text="Ingredient: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/drink_content_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter an ingredient"
                android:paddingTop="1dp" />

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="1dp"
            android:weightSum="1"
            tools:context=".search">

            <TextView
                android:id="@+id/drink_taste_tv"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:text="Taste: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/drink_taste_spinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"></Spinner>

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="1dp"
            android:weightSum="1"
            tools:context=".search">

            <TextView
                android:id="@+id/drink_color_tv"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:text="Color: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/drink_color_spinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="160sp"
                android:layout_height="wrap_content"></Spinner>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="1dp"
            android:weightSum="1"
            tools:context=".search">

            <TextView
                android:id="@+id/drink_skill_tv"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:text="Skill level: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/drink_skill_spinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="160sp"
                android:layout_height="wrap_content"></Spinner>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="1dp"
            android:weightSum="1"
            tools:context=".search">

            <TextView
                android:id="@+id/drink_glass_tv"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:text="Glass type: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/drink_glass_spinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="160sp"
                android:layout_height="wrap_content"></Spinner>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="1dp"
            android:weightSum="1"
            tools:context=".search">

            <TextView
                android:id="@+id/drink_time_tv"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:text="Occasion: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/drink_time_spinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="160sp"
                android:layout_height="wrap_content"></Spinner>

        </LinearLayout>



    </LinearLayout>




    <Button
        android:id="@+id/bt_adv_search"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:text="  Hit that search button baby  "
        android:textStyle="italic" />

    <TextView
        android:id="@+id/url_test_tv"
        android:layout_width="wrap_content"
        android:layout_height="1sp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
